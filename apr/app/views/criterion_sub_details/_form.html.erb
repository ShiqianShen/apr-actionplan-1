        <div class="col-md-5 no-padding">
          <div class="field">
            <%= f.label :action_item %><br>
            <%= f.text_field :action_item %>
          </div>

          <div class="field">
            <%= f.label :associated_tasks %><br>
            <%= f.text_field :associated_tasks %>
          </div>

          <div class="field">
            <%= f.label :individuals_resp %><br>
            <%= f.text_field :individuals_resp %>
          </div>

          <div class="field">
            <%= f.label :other_res_items %><br>
            <%= f.text_field :other_res_items %>
          </div>

          <div class="field">
            <%= f.label :cost_amt %><br>
            <%= f.text_field :cost_amt %>
          </div>
        </div>
        <!-- END First column -->

        <!-- Second column -->
        <div class="col-md-5 no-padding">

          <div class="field">
            <%= f.label :source_of_funding %><br>
            <%= f.text_field :source_of_funding %>
          </div>

          <div class="field bottom-padding">
            <%= f.label :proj_start_date %><br>
            <%= f.date_select :proj_start_date %>
          </div>

          <div class="field bottom-padding">
            <%= f.label :target_comp_date %><br>
